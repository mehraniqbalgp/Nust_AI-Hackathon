{
  "name": "campus-verify",
  "version": "1.0.0",
  "description": "Anonymous Campus Rumor Verification System with Blockchain & ZK Proofs",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "simple": "node server/simple.js",
    "db": "node server/database.server.js",
    "dev": "node --watch server/index.js",
    "dev:frontend": "npx serve -l 8080 .",
    "db:migrate": "node server/migrate.js migrate",
    "db:reset": "node server/migrate.js reset",
    "db:status": "node server/migrate.js status",
    "docker:up": "docker compose up -d postgres redis",
    "docker:down": "docker compose down",
    "docker:full": "docker compose --profile full up -d",
    "docker:logs": "docker compose logs -f",
    "contracts:compile": "npx hardhat compile",
    "contracts:test": "npx hardhat test",
    "contracts:deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "contracts:deploy:mumbai": "npx hardhat run scripts/deploy.js --network mumbai",
    "contracts:node": "npx hardhat node",
    "zk:compile": "chmod +x scripts/compile-circuits.sh && ./scripts/compile-circuits.sh",
    "test": "node --test test/api.test.js",
    "test:contracts": "npx hardhat test",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:all": "npm run test && npm run test:contracts && npm run test:e2e",
    "lint": "eslint server/ js/",
    "format": "prettier --write \"**/*.{js,json,css,md}\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.6.2",
    "circomlibjs": "^0.1.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ipfs-http-client": "^60.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "snarkjs": "^0.7.3",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@playwright/test": "^1.40.0",
    "chai": "^4.3.10",
    "eslint": "^8.55.0",
    "hardhat": "^2.19.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "serve": "^14.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "rumor-verification",
    "blockchain",
    "zero-knowledge-proofs",
    "decentralized",
    "campus"
  ],
  "author": "CampusVerify Team",
  "license": "MIT"
}