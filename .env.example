# Campus Rumor Verification System Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=3000
HOST=localhost

# ============================================
# Database (PostgreSQL)
# ============================================
# Connection string format (alternative to individual vars)
DATABASE_URL=postgresql://campusverify:secret123@localhost:5432/campusverify

# Individual vars (used if DATABASE_URL not set)
DB_HOST=localhost
DB_PORT=5432
DB_USER=campusverify
DB_PASSWORD=secret123
DB_NAME=campusverify

# ============================================
# Cache (Redis)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Proof-of-Work Settings
POW_DIFFICULTY=4
POW_TIMEOUT_MS=30000

# ============================================
# IPFS / Pinata (for decentralized storage)
# ============================================
# Get keys from https://app.pinata.cloud/
IPFS_API_URL=https://api.pinata.cloud
IPFS_API_KEY=your-pinata-api-key
IPFS_API_SECRET=your-pinata-api-secret
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# ============================================
# Blockchain (Polygon)
# ============================================
# Get RPC URL from https://alchemy.com or https://infura.io
RPC_URL=https://rpc-mumbai.maticvigil.com
CHAIN_ID=80001

# Contract Addresses (after deployment)
TRUTH_TOKEN_ADDRESS=
RUMOR_LEDGER_ADDRESS=

# Deployer private key (WITHOUT 0x prefix)
# ⚠️ NEVER commit this to version control!
PRIVATE_KEY=

# Block explorer API (for contract verification)
POLYGONSCAN_API_KEY=
ETHERSCAN_API_KEY=

# ============================================
# Optional: Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Optional: Analytics
# ============================================
COINMARKETCAP_API_KEY=
REPORT_GAS=false

# ============================================
# Testing
# ============================================
TEST_API_URL=http://localhost:3000/api
TEST_URL=http://localhost:3000
